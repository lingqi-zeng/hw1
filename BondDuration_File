def getBondDuration(y, face, couponRate, m, ppy=1):
    coupon = face * couponRate / ppy  
    total_periods = m * ppy 
    discount_rate = y / ppy  
    bondPrice = getBondPrice(y, face, couponRate, m, ppy)
    duration = sum((t * coupon / (1 + discount_rate) ** t) for t in range(1, total_periods + 1))
    duration += total_periods * (face / (1 + discount_rate) ** total_periods)
    duration /= bondPrice
    return duration
